@model QLHH_GRAB.Models.NHANVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa Nhân Viên</h2>

<h4 style="color:red;"> Bạn có chắc chắn xóa thông tin này?</h4>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"></td>
                    <td>Mã nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.MANHANVIEN)</td>
                </tr>
                <tr>
                    <td>Họ:</td>
                    <td>@Html.DisplayFor(model => model.HO)</td>
                </tr>
                <tr>
                    <td>Tên:</td>
                    <td>@Html.DisplayFor(model => model.TEN)</td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.NGAYSINH)</td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DIACHI)</td>
                </tr>
                <tr>
                    <td>Điện thoại:</td>
                    <td>@Html.DisplayFor(model => model.DIENTHOAI)</td>
                </tr>
                <tr>
                    <td>Lương cơ bản:</td>
                    <td>@Html.DisplayFor(model => model.LUONGCOBAN)</td>
                </tr>
                <tr>
                    <td>Phụ cấp:</td>
                    <td>@Html.DisplayFor(model => model.PHUCAP)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
