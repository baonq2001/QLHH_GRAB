@model QLHH_GRAB.Models.KHACHHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Khách Hàng</h2>
<table border="1" cellpadding="0" cellspacing="0" style="font-size:18px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8">
                    <td>Mã khách hàng:</td>
                    <td>@Html.DisplayFor(model => model.MAKHACHHANG)</td>
                </tr>
                <tr>
                    <td>Tên khách hàng:</td>
                    <td>@Html.DisplayFor(model => model.TENKH)</td>
                </tr>
                <tr>
                    <td>Tên giao dịch:</td>
                    <td>@Html.DisplayFor(model => model.TENGIAODICH)</td>
                </tr>

                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DIACHI)</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>@Html.DisplayFor(model => model.EMAIL)</td>
                </tr>
                <tr>
                    <td>Điện thoại:</td>
                    <td>@Html.DisplayFor(model => model.DIENTHOAI)</td>
                </tr>               

            </table>
        </td>
    </tr>
</table>
<p style="margin-left:50px;">
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MAKHACHHANG }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
